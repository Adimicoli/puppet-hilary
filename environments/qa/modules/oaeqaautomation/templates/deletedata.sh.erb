#!/bin/sh

# User-uploaded files
rm -rf <%= user_files_dir %>/*

# Search index
rm -rf <%= elasticsearch_data_dir %>/*

# Cassandra data
rm -rf <%= cassandra_data_dir %>/data/*
rm -rf <%= cassandra_data_dir %>/saved_caches/*
rm -rf /var/lib/cassandra/commitlog/*

# Redis db
rm -rf /var/lib/redis/*

# Preserve the application logs.
mv <%= app_root_dir %>/server.log "/var/log/oae/$(date +%Y-%m-%d)-app.server.log"

# Code. Might as well
rm -rf <%= app_root_dir %>
rm -rf <%= ux_root_dir %>
rm -rf <%= ux_root_dir %>/../original
